@model IEnumerable<SahanaKutuphane.Models.Uye>

@{
    ViewBag.Title = "Uye Getir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="page-header"><i class="fa fa-table"></i>Uye Listeleme</h2>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-active">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Uye Adı</th>
                    <th>Uye Fotoğraf</th>
                    <th>Cezalı Kitap</th>
                    <th>Bulunan Kitaplar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.UyeId</td>
                        <td>@item.UyeAd</td>
                        <td><img src="@item.UyeFoto" width="250" height="250" /></td>
                        <td>@item.Kitap.KitapAd</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>