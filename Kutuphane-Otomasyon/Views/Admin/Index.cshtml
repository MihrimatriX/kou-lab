@model IEnumerable<SahanaKutuphane.Models.Kitap>

@{
    ViewBag.Title = "Admin Anasayfa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
    $(document).ready( function ()
    {
        $('#mytable').DataTable();
    });
</script>

<!-- DESIGN RENDER BODY -->
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i>Admin Özet Görünümü</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="/Admin/Index/">Ana Sayfa</a></li>
            <li><i class="fa fa-laptop"></i>Admin Özeti</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <div class="info-box blue-bg">
            <i class="fa fa-cloud-download"></i>
            <div class="count">5.000</div>
            <div class="title">Kayıtlı Kitap</div>
        </div>
        <!-- KAYILI KİTAP SAYISI -->
    </div>
    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <div class="info-box dark-bg">
            <i class="fa fa-thumbs-o-up"></i>
            <div class="count">5.000</div>
            <div class="title">Toplam Üye</div>
        </div>
        <!-- UYE SAYISI -->
    </div>
    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <div class="info-box green-bg">
            <i class="fa fa-cubes"></i>
            <div class="count">386</div>
            <div class="title">Cezalı Kitap</div>
        </div>
        <!-- CEZALI KİTAP SAYISI -->
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-active" id="mytable">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Kitabın Adı</th>
                    <th>ISBN</th>
                    <th>Resim</th>
                    <th>Açıklama</th>
                    <th>Alma Tarihi</th>
                    <th>Getirme Tarihi</th>
                    <th>Kullanımda</th>
                    <th>İŞLEMLER</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.KitapId</td>
                        <td>@item.KitapAd</td>
                        <td>@item.KitapISBN</td>
                        <td><img src="@item.KitapResimURL" width="100" height="125" /></td>
                        <td>@Html.Raw(@item.KitapAciklama)</td>
                        <td>@item.AlmaTarih</td>
                        <td>@item.GetirmeTarih</td>
                        <td>@item.Kullanımda</td>
                        <td><a href="/Admin/Edit/@item.KitapId">Duzenle</a> | <a href="/Admin/Delete/@item.KitapId">Sil</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>