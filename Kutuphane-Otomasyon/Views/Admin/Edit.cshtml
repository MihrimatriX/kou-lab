@model SahanaKutuphane.Models.Kitap
@{
    ViewBag.Title = "Kitap Duzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

<h2 class="page-header"><i class="fa fa-book"></i>Kitap Düzenleme</h2>

<div class="form">
    <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Admin/Edit/@Model.KitapId" enctype="multipart/form-data">
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Kitap Adı<span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="cname" name="KitapAd" minlength="5" type="text" required value="@Model.KitapAd" />
            </div>
        </div> 
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Kitap Adı<span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="cname" name="KitapISBN" minlength="5" type="text" value="@Model.KitapISBN" />
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Kitap Açıklama<span class="required"></span></label>
            <div class="col-lg-10">
                <textarea name="KitapAciklama" class="ckeditor">@Model.KitapAciklama</textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Önceki Resim</label>
            <div class="col-lg-10">
                <img src="@Model.KitapResimURL" width="200" height="250"/>
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Kitap Resim</label>
            <div class="col-lg-10">
                <input class="form-control" name="KitapResimURL" accept=".jpg,.png,.jpeg" type="file" required />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Kaydet</button>
                <button class="btn btn-default" type="button"><a href="/Admin/Index/">Geri Dön</a></button>
            </div>
        </div>
    </form>
</div>