
@{
    ViewBag.Title = "Kitap Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

<h2 class="page-header"><i class="fa fa-book"></i>Kitap Ekleme</h2>

<div class="form">
    <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Admin/Create" enctype="multipart/form-data">
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Kitap Adı<span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="cname" name="KitapAd" minlength="5" type="text" required />
            </div>
        </div>   
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Kitap ISBN<span class="required"></span></label>
            <div class="col-lg-10">
                <input class="form-control" id="cname" name="KitapISBN" minlength="5" type="text" />
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Kitap Açıklama</label>
            <div class="col-lg-10">
                <textarea name="KitapAciklama" class="ckeditor"></textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Kitap Resim<span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" name="KitapResimURL" accept=".jpg,.png,.jpeg" type="file" required />
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Kaydet</button>
                <button class="btn btn-default" type="button"><a href="/Admin/Index/">Geri Dön</a></button>
            </div>
        </div>
    </form>
</div>