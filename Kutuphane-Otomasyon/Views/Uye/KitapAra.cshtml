
@{
    ViewBag.Title = "Kitap Ara";
    Layout = "~/Views/Shared/_UyeLayout.cshtml";
}

    <script>
    $(document).ready( function ()
    {
        $('#KitapTable').DataTable();
    });
    </script>

<h2 class="page-header"><i class="fa fa-book"></i>Kitap Ara</h2>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-active" id="KitapTable">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Kitabın Adı</th>
                    <th>ISBN</th>
                    <th>Resim</th>
                    <th>Açıklama</th>
                    <th>Kullanımda</th>
                    <th>İŞLEMLER</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.KitapId</td>
                        <td>@item.KitapAd</td>
                        <td>@item.KitapISBN</td>
                        <td><img src="@item.KitapResimURL" width="100" height="125" /></td>
                        <td>@Html.Raw(@item.KitapAciklama)</td>
                        <td>@item.Kullanımda</td>
                        <td><button><a href="/Uye/KitapAl/@item.KitapId">Kitabı Seç</a></button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<h2 class="page-header"><i class="fa fa-book"></i>Kitabı Resimle Ara</h2>