@model IEnumerable<SahanaKutuphane.Models.Kitap>

@{
    ViewBag.Title = "Admin Anasayfa";
    Layout = "~/Views/Shared/_UyeLayout.cshtml";
}

<!-- DESIGN RENDER BODY -->
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-laptop"></i>Üye Özet Görünümü</h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="/Uye/Index/">Ana Sayfa</a></li>
            <li><i class="fa fa-laptop"></i>Üye Özeti</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <div class="info-box blue-bg">
            <i class="fa fa-cloud-download"></i>
            <div class="count">3</div>
            <div class="title">Üstümdeki Kitap</div>
        </div>
        <!-- KAYILI KİTAP SAYISI -->
    </div>
    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <div class="info-box dark-bg">
            <i class="fa fa-thumbs-o-up"></i>
            <div class="count">2</div>
            <div class="title">Tarihi Geçenler</div>
        </div>
        <!-- UYE SAYISI -->
    </div>
    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        <div class="info-box green-bg">
            <i class="fa fa-cubes"></i>
            <div class="count">2</div>
            <div class="title">Cezalı Kitap</div>
        </div>
        <!-- CEZALI KİTAP SAYISI -->
    </div>
</div>

<h3 class="page-header"><i class="fa fa-laptop"></i>Kitaplarım</h3>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-active" id="KitapTable">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Kitabın Adı</th>
                    <th>ISBN</th>
                    <th>Resim</th>
                    <th>Açıklama</th>
                    <th>Kullanımda</th>
                    <th>İŞLEMLER</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.KitapId</td>
                        <td>@item.KitapAd</td>
                        <td>@item.KitapISBN</td>
                        <td><img src="@item.KitapResimURL" width="100" height="125" /></td>
                        <td>@Html.Raw(@item.KitapAciklama)</td>
                        <td>@item.Kullanımda</td>
                        <td><button><a href="/Uye/KitapVer/@item.KitapId">Kitabı Ver</a></button></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>